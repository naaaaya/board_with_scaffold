<p id="notice"><%= notice %></p>

<h1>
  <%= @my_thread.title %>
</h1>

<%= link_to 'Edit', edit_my_thread_path(@my_thread) %> |
<%= link_to 'Back', my_threads_path %>


<table>
  <thead>
    <tr>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_thread.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= link_to 'Edit', edit_my_thread_comment_path(@my_thread.id, comment.id) %></td>
        <td><%= link_to 'Destroy', [@my_thread, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_my_thread_comment_path(my_thread_id:@my_thread.id) %>
